@using BookMate.Models.ViewModel
@model AttendanceViewModel
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var recentLogs = ViewBag.RecentLogs as IEnumerable<AttendanceViewModel>;
}

<!-- Main wrapper -->
<div class="container-fluid">

    <!-- Dashboard header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Admin Dashboard</h3>
        <span class="text-muted">Welcome back, Admin</span>
    </div>

    <hr />

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@ViewBag.CurrentlyCheckedIn</h4>
                            <p>Currently Checked-In</p>
                        </div>
                        <i class="fas fa-user-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-info shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@ViewBag.SeatsAvailable</h4>
                            <p>Seats Available</p>
                        </div>
                        <i class="fas fa-chair fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-danger shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@ViewBag.SeatsOccupied</h4>
                            <p>Seats Occupied</p>
                        </div>
                        <i class="fas fa-chair fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4>@ViewBag.TotalCheckIns </h4>
                            <p>Total Check-ins Today</p>
                        </div>
                        <i class="fas fa-user-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart & Recent Logs -->
    <div class="row">
        <!-- Pie Chart -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-white text-center ">
                    <h5 class="card-title mb-0">Seat Status</h5>
                </div>
                <div class="card-body" style="height:244px">
                    <canvas id="seatChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Recent Logs Table -->
        <div class="col-md-6 mb-4">
            <div class="card shadow">
                <div class="card-header bg-white text-center">
                    <h5 class="card-title mb-0">Recent Attendance Logs</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                              
                                <th>Std_Id</th>
                                <th>Name</th>
                                <th>Seat_No</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (recentLogs != null && recentLogs.Any())
                            {
                                foreach (var log in recentLogs)
                                {
                                    <tr>
                                        
                                        <td>@log.student_ID</td>
                                        <td>@log.Student_Name</td>
                                        <td>@log.SeatID</td>
                                        <td><span class="badge bg-@(log.Status == "Checked In" ? "success" : "secondary")">@log.Status</span></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">No recent logs.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const seatChart = new Chart(document.getElementById('seatChart'), {
        type: 'doughnut',
        data: {
            labels: ['Available', 'Occupied'],
            datasets: [{
                label: 'Seats',
                data: [@ViewBag.SeatsAvailable, @ViewBag.SeatsOccupied],
                backgroundColor: ['#0dcaf0', '#dc3545'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
</script>
