@model IEnumerable<BookMate.Models.Seat>
@{
    ViewBag.Title = "Seat List";
}

<h4>All Seats</h4>

<hr />
<div class="d-flex gap-2 mb-2">
<p>
    <form asp-action="Create_Seat" method="post">
        <button type="submit" class="btn btn-primary btn-sm">+ Seat</button>
    </form>
</p>
<p>
    <form asp-action="Delete_Seat" method="post">
        <button type="submit" class="btn btn-danger btn-sm">- Seat</button>
    </form>
</p>
</div>
<table class="table table-bordered table-hover table-striped shadow">
    <thead>
        <tr>
            <th>Seat_No</th>
           
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seat in Model)
        {
            <tr>
                <td>@seat.SeatID</td>
                
                <td>@seat.SeatStatus </td>
            </tr>
        }
    </tbody>
</table>
