@model IEnumerable<BookMate.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Student Records</h4>

<hr />

<p>   
    <a asp-action="Create" class="btn btn-primary btn-sm">Registration Form</a>
</p>


    <div class="table-responsive">
<table class="table table-hover table-striped table-bordered w-100 ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_of_Birth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.No_of_Months)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admission_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fees_Amt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total_Fees_Amt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student_Status)
            </th>
            <th class="text-nowrap">
                @Html.DisplayNameFor(model => model.Contact_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_of_Birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.No_of_Months)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admission_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fees_Amt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Fees_Amt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact_Number)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="text-nowrap">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td class="text-nowrap resp">
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-success btn-sm">Details</a> |
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Manage</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

